@{
    Layout = "_Layout";
}
@model HomeData
<div class="title">
    <span class="title_icon">
        <img src="~/user/images/bullet1.gif" alt="" title="" />
    </span>Featured products
</div>


@foreach(var item in Model.Products_Featured)
{
    <div class="feat_prod_box">

        <div class="prod_img">
            <a href="details.html">
                <img src="~/Images/@item.Photo" alt="" width="149" height="137" title="" border="0" />
            </a>
        </div>

        <div class="prod_det_box">
            <div class="box_top"></div>
            <div class="box_center">
                <div class="prod_title">@item.Name</div>
                <p class="details">
                    @item.Description
                </p>
                <a asp-action="details" asp-route-id="@item.Id" asp-controller="product" class="more">- more details -</a>
                <div class="clear"></div>
            </div>

            <div class="box_bottom"></div>
        </div>
        <div class="clear"></div>
    </div>
}


<div class="title">
    <span class="title_icon">
        <img src="~/user/images/bullet2.gif" alt="" title="" />
    </span>New products
</div>
<div class="new_products">
    @foreach(var item in Model.Products_News)
    {
    <div class="new_prod_box">
            <a href="details.html">@item.Name</a>
        <div class="new_prod_bg">
                <span class="new_icon">
                    <img src="~/user/images/new_icon.gif" alt="" title="" />
                </span> <a href="details.html">
                    <img src="~/Images/@item.Photo" width="149" height="137" alt="" title="" class="thumb" border="0" />
                </a>
            </div>
        </div>
    }
    


</div>
<div class="clear"></div>